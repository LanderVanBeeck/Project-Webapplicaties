@model Project_Webapplicaties.ViewModels.DeleteTicketViewModel
@{ 
    ViewData["Title"] = "Delete ticket";
}
<div class="title-box">
    <h1 class="title">Delete</h1>
    <h2>Waarschuwing! Het verwijderen van dit item kan niet ongedaan gemaakt worden!</h2>
    <h4>Ticket</h4>
</div>
<br />
<div class="info-box">
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Delete">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Type" class="control-label"></label>
                    : @Model.Type
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Beschrijving" class="control-label"></label>
                    : @Model.Beschrijving
                    <span asp-validation-for="Beschrijving" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Vip" class="control-label"></label>
                    : @Model.Vip
                    <span asp-validation-for="Vip" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Prijs" class="control-label"></label>
                    : @Model.Prijs
                    <span asp-validation-for="Prijs" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Delete" class="btn btn-danger" />
                </div>
            </form>
        </div>
    </div>
</div>
<div>
    <a asp-action="Index">Terug naar vorige pagina</a>
</div>

@section Scripts {
@{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}