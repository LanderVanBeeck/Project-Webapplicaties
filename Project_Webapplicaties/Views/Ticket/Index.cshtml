@model Project_Webapplicaties.ViewModels.TicketListViewModel
<div class="title-box">
    <h2 class="title">Ticket</h2>
</div>
<br />
<div class="info-box">
    <div class="ticket-table">
        <table>
            <thead>
                <tr>
                    <th class="col-md-4">
                        @Html.DisplayNameFor(model => model.Tickets[0].TicketID)
                    </th>
                    <th class="col-md-4">
                        @Html.DisplayNameFor(model => model.Tickets[0].Type)
                    </th>
                    <th class="col-md-4">
                        @Html.DisplayNameFor(model => model.Tickets[0].Prijs)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Tickets)
                {
                    <tr>
                        <td class="col-md-4">
                            @item.TicketID
                        </td>
                        <td class="col-md-4">
                            @item.Type
                        </td>
                        <td class="col-md-4">
                            @item.Prijs
                        </td>
                        <td>
                            @if (this.User.Identity.IsAuthenticated)
                            {
                                <a asp-action="Create" asp-route-id="@item.TicketID">Create</a>
                                <a asp-action="Edit" asp-route-id="@item.TicketID">Edit</a>
                                <a asp-action="Delete" asp-route-id="@item.TicketID">Delete</a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>