@model Project_Webapplicaties.ViewModels.EditLineUpViewModel
@{ 
    ViewData["Title"] = "Edit line-up";
}

<h1 class="title">Edit</h1>
<h4>Line-up</h4>
<br />
<div class="info-box">
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Datum" class="control-label"></label>
                    <input asp-for="Datum" class="form-control" />
                    <span asp-validation-for="Datum" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Tijd" class="control-label"></label>
                    <input asp-for="Tijd" class="form-control" />
                    <span asp-validation-for="Tijd" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>
<div>
    <a asp-action="Index">Terug naar vorige pagina</a>
</div>

@section Scripts {
@{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}